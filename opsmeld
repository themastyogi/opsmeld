    <!-- Security Meta Tags -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <meta name="robots" content="noindex, nofollow, noarchive, nosnippet, noimageindex">
    <meta http-equiv="X-Frame-Options" content="DENY">
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';">
    
    <script>
        // Admin Authentication System
        let isAdmin = false;
        let adminPassword = "Admin@2025!ERP"; // Change this to your desired admin password
        
        // Security JavaScript - Prevent Screenshots and Content Copying
        
        // Check admin status on page load
        window.addEventListener('load', function() {
            checkAdminStatus();
            initializeSecurity();
        });
        
        function checkAdminStatus() {
            // Check if admin is already authenticated (session storage for demo)
            if (sessionStorage.getItem('adminAuthenticated') === 'true') {
                isAdmin = true;
                showAdminControls();
                return;
            }
            
            // Show admin login prompt
            showAdminLogin();
        }
        
        function showAdminLogin() {
            const loginDiv = document.createElement('div');
            loginDiv.id = 'adminLogin';
            loginDiv.innerHTML = `
                <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; 
                           background: rgba(0,0,0,0.8); z-index: 99999; display: flex; 
                           justify-content: center; align-items: center;">
                    <div style="background: white; padding: 40px; border-radius: 10px; text-align: center; 
                               box-shadow: 0 10px 30px rgba(0,0,0,0.5); max-width: 400px;">
                        <h3 style="color: #dc3545; margin-bottom: 20px;">🔒 Admin Authentication Required</h3>
                        <p style="margin-bottom: 20px; color: #666;">This document contains confidential information. Admin privileges required for full access.</p>
                        <input type="password" id="adminPasswordInput" placeholder="Enter Admin Password" 
                               style="width: 100%; padding: 12px; margin-bottom: 20px; border: 2px solid #ddd; 
                               border-radius: 5px; font-size: 16px;">
                        <div style="margin-bottom: 20px;">
                            <button onclick="authenticateAdmin()" 
                                    style="background: #28a745; color: white; padding: 12px 30px; 
                                    border: none; border-radius: 5px; cursor: pointer; font-size: 16px; margin-right: 10px;">
                                Login as Admin
                            </button>
                            <button onclick="continueAsUser()" 
                                    style="background: #6c757d; color: white; padding: 12px 30px; 
                                    border: none; border-radius: 5px; cursor: pointer; font-size: 16px;">
                                Continue as User
                            </button>
                        </div>
                        <small style="color: #999;">User mode: View-only with copy protection enabled</small>
                    </div>
                </div>
            `;
            document.body.appendChild(loginDiv);
            
            // Focus on password input
            setTimeout(() => {
                document.getElementById('adminPasswordInput').focus();
            }, 100);
            
            // Allow Enter key to submit
            document.getElementById('adminPasswordInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    authenticateAdmin();
                }
            });
        }
        
        function authenticateAdmin() {
            const password = document.getElementById('adminPasswordInput').value;
            if (password === adminPassword) {
                isAdmin = true;
                sessionStorage.setItem('adminAuthenticated', 'true');
                document.getElementById('adminLogin').remove();
                showAdminControls();
                showSecurityAlert('Admin mode activated - Copy protection disabled', 'success');
            } else {
                showSecurityAlert('Invalid admin password - Access denied');
                document.getElementById('adminPasswordInput').value = '';
                document.getElementById('adminPasswordInput').focus();
            }
        }
        
        function continueAsUser() {
            isAdmin = false;
            document.getElementById('adminLogin').remove();
            
            // Enable content protection for user mode
            document.body.classList.add('protected');
            document.getElementById('securityBanner').style.display = 'block';
            
            showSecurityAlert('User mode activated - Content protection enabled');
        }
        
        function showAdminControls() {
            const adminPanel = document.createElement('div');
            adminPanel.innerHTML = `
                <div style="position: fixed; top: 10px; right: 10px; background: #28a745; color: white; 
                           padding: 10px 15px; border-radius: 5px; z-index: 1001; font-weight: bold;">
                    👑 Admin Mode Active - Copy Protection Disabled
                    <button onclick="logout()" style="background: #dc3545; color: white; border: none; 
                           padding: 5px 10px; margin-left: 10px; border-radius: 3px; cursor: pointer;">
                        Logout
                    </button>
                </div>
            `;
            document.body.appendChild(adminPanel);
            
            // Remove protection in admin mode
            document.body.classList.remove('protected');
            document.getElementById('securityBanner').style.display = 'none';
        }
        
        function logout() {
            isAdmin = false;
            sessionStorage.removeItem('adminAuthenticated');
            location.reload();
        }
        
        function initializeSecurity() {
            if (!isAdmin) {
                enableContentProtection();
            }
        }
        
        function enableContentProtection() {
            // Disable right-click context menu
            document.addEventListener('contextmenu', function(e) {
                e.preventDefault();
                showSecurityAlert('Right-click is disabled for security reasons');
                return false;
            });
            
            // Disable F12, Ctrl+Shift+I, Ctrl+U, Ctrl+S, Ctrl+P, Ctrl+A
            document.addEventListener('keydown', function(e) {
                // Disable F12 (Developer Tools)
                if (e.keyCode === 123) {
                    e.preventDefault();
                    showSecurityAlert('Developer tools are disabled');
                    return false;
                }
                
                // Disable Ctrl+Shift+I (Developer Tools)
                if (e.ctrlKey && e.shiftKey && e.keyCode === 73) {
                    e.preventDefault();
                    showSecurityAlert('Developer tools access is restricted');
                    return false;
                }
                
                // Disable Ctrl+U (View Source)
                if (e.ctrlKey && e.keyCode === 85) {
                    e.preventDefault();
                    showSecurityAlert('View source is disabled');
                    return false;
                }
                
                // Disable Ctrl+S (Save)
                if (e.ctrlKey && e.keyCode === 83) {
                    e.preventDefault();
                    showSecurityAlert('Saving is disabled for security');
                    return false;
                }
                
                // Disable Ctrl+P (Print)
                if (e.ctrlKey && e.keyCode === 80) {
                    e.preventDefault();
                    showSecurityAlert('Printing is disabled for confidential content');
                    return false;
                }
                
                // Disable Ctrl+A (Select All)
                if (e.ctrlKey && e.keyCode === 65) {
                    e.preventDefault();
                    showSecurityAlert('Text selection is disabled');
                    return false;
                }
                
                // Disable Print Screen
                if (e.keyCode === 44) {
                    e.preventDefault();
                    showSecurityAlert('Screenshots are not allowed');
                    return false;
                }
                
                // Disable Windows Snipping Tool (Win + Shift + S)
                if (e.metaKey && e.shiftKey && e.keyCode === 83) {
                    e.preventDefault();
                    showSecurityAlert('Screenshot tools are blocked');
                    return false;
                }
                
                // Disable Alt + Print Screen
                if (e.altKey && e.keyCode === 44) {
                    e.preventDefault();
                    showSecurityAlert('Screenshot attempt blocked');
                    return false;
                }
            });
            
            // Disable text selection
            document.addEventListener('selectstart', function(e) {
                e.preventDefault();
                showSecurityAlert('Text selection is disabled for security');
                return false;
            });
            
            // Disable drag and drop
            document.addEventListener('dragstart', function(e) {
                e.preventDefault();
                return false;
            });
            
            // Disable copy, cut, paste operations
            document.addEventListener('copy', function(e) {
                e.preventDefault();
                showSecurityAlert('Copying content is disabled');
                return false;
            });
            
            document.addEventListener('cut', function(e) {
                e.preventDefault();
                showSecurityAlert('Cutting content is disabled');
                return false;
            });
            
            document.addEventListener('paste', function(e) {
                e.preventDefault();
                return false;
            });
            
            // Monitor for developer tools
            let devtools = {open: false, orientation: null};
            const threshold = 160;
            
            setInterval(function() {
                if (window.outerHeight - window.innerHeight > threshold || 
                    window.outerWidth - window.innerWidth > threshold) {
                    if (!devtools.open) {
                        devtools.open = true;
                        showSecurityAlert('Developer tools detected - Access violation logged');
                    }
                } else {
                    devtools.open = false;
                }
            }, 500);
            
            // Anti-debugging techniques
            (function() {
                function detectDebugger() {
                    let start = new Date();
                    debugger;
                    let end = new Date();
                    if (end - start > 100) {
                        showSecurityAlert('Debug mode detected - Security violation');
                        return true;
                    }
                    return false;
                }
                
                setInterval(detectDebugger, 1000);
            })();
            
            // Prevent console access
            (function() {
                let console = window.console || {};
                let methods = ['log', 'debug', 'warn', 'info', 'error', 'dir', 'props', 'group', 'groupEnd'];
                for (let i = 0; i < methods.length; i++) {
                    console[methods[i]] = function() {};
                }
                window.console = console;
            })();
            
            // Prevent window printing
            window.print = function() {
                showSecurityAlert('Printing is disabled for this confidential document');
                return false;
            };
        }
        
        // Security alert function
        function showSecurityAlert(message, type = 'error') {
            const alertColor = type === 'success' ? '#28a745' : '#dc3545';
            const alertDiv = document.createElement('div');
            alertDiv.innerHTML = `
                <div style="position: fixed; top: 20px; right: 20px; background: ${alertColor}; color: white; 
                           padding: 15px; border-radius: 5px; z-index: 10000; box-shadow: 0 4px 8px rgba(0,0,0,0.3);
                           max-width: 300px; animation: slideIn 0.3s ease-out;">
                    <strong>${type === 'success' ? '✅' : '🚫'} ${type === 'success' ? 'Success:' : 'Security Alert:'}</strong><br/>${message}
                </div>
            `;
            document.body.appendChild(alertDiv);
            setTimeout(() => {
                if (document.body.contains(alertDiv)) {
                    document.body.removeChild(alertDiv);
                }
            }, 4000);
        }
        
        // Add CSS animation for alerts
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
        `;
        document.head.appendChild(style);
    </script>
    
